{
  "name": "cozy-triggers",
  "description": "Triggers for the Cozy Protocol",
  "version": "0.0.1",
  "dependencies": {},
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^5.0.0",
    "@typechain/hardhat": "^1.0.1",
    "@types/chai": "^4.2.13",
    "@types/fs-extra": "^9.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.3.0",
    "fs-extra": "^9.0.1",
    "hardhat": "^2.2.0",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^4.3.0",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-beta.9",
    "shelljs": "^0.8.4",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^8.10.2",
    "typechain": "^4.0.1",
    "typescript": "<4.1.0"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:hardhat": "hardhat run scripts/deploy.ts --network hardhat",
    "lint": "yarn prettier && yarn lint:sol && yarn lint:ts",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "test": "hardhat test",
    "typechain": "hardhat typechain"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier"
    }
  },
  "volta": {
    "node": "16.1.0",
    "yarn": "1.22.10"
  }
}
